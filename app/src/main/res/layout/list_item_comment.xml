<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">
<com.wangdiaozhu.qingweibo.view.CircleImageView
    android:layout_marginTop="15dp"
    android:paddingLeft="10dp"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/avatar_default"
    android:id="@+id/iv_user_icon"
    android:layout_alignParentStart="true" />

    <TextView

        android:textColor="#000"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户昵称"
        android:textSize="16sp"
        android:id="@+id/tv_user_name"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_user_icon" />

    <TextView
        android:textColor="@color/color_text_normal"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21:18"
        android:textSize="13sp"
        android:id="@+id/tv_create_at"
        android:layout_below="@+id/tv_user_name"
        android:layout_toEndOf="@+id/iv_user_icon" />

        <ImageButton
            android:src="@drawable/statusdetail_icon_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton"
            android:layout_marginEnd="20dp"
            android:background="#00000000"
            android:layout_alignTop="@+id/tv_user_name"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <TextView
        android:textColor="@color/color_text_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论正文"
        android:autoLink="web"
        android:id="@+id/tv_weibo_text_comment"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"/>


</LinearLayout>